<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
	  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
	  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
	  <link rel="shortcut icon" href="ms-teams-logo.png" type="image/x-icon">
	  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css"
	  integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk="crossorigin="anonymous"	/>
	  <link rel="stylesheet" href="chatRoom/chatroom1.css" />
	  <title>Chat Room</title>
  </head>
  <body>
	<div class="join-container">
	  <!-- Heading of Chat Room -->
  	  <header class="join-header">
	       <h1><i class="far fa-comments"></i> MS TEAMS CHAT ROOM</h1>
	  </header>
	  <main class="join-main">
		<form action="chatRoom/chat.html">
			<div class="form-control">
		  		<!-- Take username -->
		  		<label for="username">Username</label>
		  		<input
					type="text"
					name="username"
					id="username"
					placeholder="Enter username"
					required
		  		/>
		  	</div>
		  	<!-- Choose Room to enter -->
		  	<div class="form-control">
		    		<label for="room">Room</label>
				<select name="room" id="room">
					<option value="Room1">Room1</option>
					<option value="Room2">Room2</option>
					<option value="Room3">Room3</option>
					<option value="Room4">Room4</option>
					<option value="Room5">Room5</option>
					<option value="Room6">Room6</option>
				</select>
		  	</div>
			<!-- Join Selected Chat Room -->
	    		<button class="custom-btn btn-join" type="submit"><span>Click!</span><span>Join Room</span></button>
		</form>
	  </main>
	</div>
  </body>
</html>
